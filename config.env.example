# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=tabimoney

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE_HOURS=24
JWT_REFRESH_EXPIRE_HOURS=168

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=localhost
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# AI Service URL (backend -> ai-service)
# If backend runs locally: http://localhost:8001
# If backend runs in docker-compose: http://ai-service:8001
AI_SERVICE_URL=http://localhost:8001

# Frontend AI Service URL (frontend -> ai-service directly)
VITE_AI_SERVICE_URL=http://localhost:8001

# Gemini Configuration (ai-service) - Required
USE_GEMINI=true
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MAX_TOKENS=512
GEMINI_TEMPERATURE=0.3

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=TabiMoney

# Telegram Bot Configuration
# Required for both backend and telegram-bot service
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Telegram Bot Service Configuration (used in docker-compose)
# BACKEND_URL and AI_SERVICE_URL are set automatically in docker-compose
# For local development, set:
# BACKEND_URL=http://localhost:8080
# AI_SERVICE_URL=http://localhost:8001

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Environment
ENV=development
