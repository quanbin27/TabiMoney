@startuml UC_014_ExpensePrediction

skinparam usecase {
    BackgroundColor #FFFFFF
    BorderColor #000000
    ArrowColor #000000
    BorderThickness 1.4
    FontColor #000000
    FontSize 14
}

skinparam actor {
    BackgroundColor #FFFFFF
    BorderColor #000000
    FontColor #000000
    FontSize 14
}

skinparam package {
    BorderColor #000000
    FontColor #000000
}

skinparam shadowing false
skinparam dpi 150

' Layout ngang
left to right direction

actor User
actor "AI Service" as AI

usecase "Dự đoán chi tiêu" as UC_ExpensePrediction
usecase "Lấy lịch sử 3-6 tháng" as UC_GetHistory
usecase "Phân tích trend" as UC_AnalyzeTrend
usecase "Phân tích pattern" as UC_AnalyzePattern
usecase "Áp dụng ML model" as UC_ApplyModel
usecase "Tính toán dự đoán" as UC_CalculatePrediction
usecase "Tính confidence score" as UC_CalculateConfidence
usecase "Lưu kết quả" as UC_SaveResult

User --> UC_ExpensePrediction
AI --> UC_AnalyzeTrend
AI --> UC_AnalyzePattern
AI --> UC_ApplyModel
UC_ExpensePrediction ..> UC_GetHistory : <<includes>>
UC_ExpensePrediction ..> UC_AnalyzeTrend : <<includes>>
UC_ExpensePrediction ..> UC_AnalyzePattern : <<includes>>
UC_ExpensePrediction ..> UC_ApplyModel : <<includes>>
UC_ExpensePrediction ..> UC_CalculatePrediction : <<includes>>
UC_ExpensePrediction ..> UC_CalculateConfidence : <<includes>>
UC_ExpensePrediction ..> UC_SaveResult : <<includes>>

@enduml
