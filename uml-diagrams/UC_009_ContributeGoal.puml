@startuml UC_009_ContributeGoal

skinparam usecase {
    BackgroundColor #FFFFFF
    BorderColor #000000
    ArrowColor #000000
    BorderThickness 1.4
    FontColor #000000
    FontSize 14
}

skinparam actor {
    BackgroundColor #FFFFFF
    BorderColor #000000
    FontColor #000000
    FontSize 14
}

skinparam package {
    BorderColor #000000
    FontColor #000000
}

skinparam shadowing false
skinparam dpi 150

' Layout ngang
left to right direction

actor User

usecase "Đóng góp vào mục tiêu" as UC_ContributeGoal
usecase "Chọn mục tiêu" as UC_SelectGoal
usecase "Nhập số tiền" as UC_EnterAmount
usecase "Validate amount" as UC_Validate
usecase "Cập nhật current_amount" as UC_UpdateAmount
usecase "Tính toán progress" as UC_CalculateProgress
usecase "Kiểm tra đạt mục tiêu" as UC_CheckAchieved
usecase "Gửi thông báo chúc mừng" as UC_SendCongrats

User --> UC_ContributeGoal
UC_ContributeGoal ..> UC_SelectGoal : <<includes>>
UC_ContributeGoal ..> UC_EnterAmount : <<includes>>
UC_ContributeGoal ..> UC_Validate : <<includes>>
UC_ContributeGoal ..> UC_UpdateAmount : <<includes>>
UC_ContributeGoal ..> UC_CalculateProgress : <<includes>>
UC_ContributeGoal ..> UC_CheckAchieved : <<includes>>
UC_ContributeGoal ..> UC_SendCongrats : <<extends>>

@enduml
