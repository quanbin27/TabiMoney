@startuml UC_018_BudgetAlert

skinparam usecase {
    BackgroundColor #FFFFFF
    BorderColor #000000
    ArrowColor #000000
    BorderThickness 1.4
    FontColor #000000
    FontSize 14
}

skinparam actor {
    BackgroundColor #FFFFFF
    BorderColor #000000
    FontColor #000000
    FontSize 14
}

skinparam package {
    BorderColor #000000
    FontColor #000000
}

skinparam shadowing false
skinparam dpi 150

' Layout ngang
left to right direction

actor "System" as System

usecase "Cảnh báo vượt ngân sách" as UC_BudgetAlert
usecase "Tính spent_amount" as UC_CalculateSpent
usecase "Tính usage_percentage" as UC_CalculateUsage
usecase "Kiểm tra threshold" as UC_CheckThreshold
usecase "Kiểm tra đã gửi notification" as UC_CheckSent
usecase "Tạo notification" as UC_CreateNotification
usecase "Gửi notification" as UC_SendNotification

System --> UC_BudgetAlert
UC_BudgetAlert ..> UC_CalculateSpent : <<includes>>
UC_BudgetAlert ..> UC_CalculateUsage : <<includes>>
UC_BudgetAlert ..> UC_CheckThreshold : <<includes>>
UC_BudgetAlert ..> UC_CheckSent : <<includes>>
UC_BudgetAlert ..> UC_CreateNotification : <<includes>>
UC_BudgetAlert ..> UC_SendNotification : <<includes>>

@enduml
